<?xml version="1.0" encoding="utf-8"?>
<TableLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <TableRow android:gravity="center">
        <EditText
            android:id="@+id/edit1"
            android:layout_span="4"
            android:hint="숫자를 입력하세요"/>
    </TableRow>

    <TableRow android:gravity="center">
        <Button
            android:id="@+id/Num1"
            android:text="1"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/Num2"
            android:text="2"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Num3"
            android:text="3"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Add"
            android:text="+"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow android:gravity="center">
        <Button
            android:id="@+id/Num4"
            android:text="4"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/Num5"
            android:text="5"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Num6"
            android:text="6"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Sub"
            android:text="-"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow android:gravity="center">
        <Button
            android:id="@+id/Num7"
            android:text="7"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/Num8"
            android:text="8"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Num9"
            android:text="9"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Mul"
            android:text="*"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow android:gravity="center">
        <Button
            android:id="@+id/Num0"
            android:text="0"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/Cls"
            android:text="C"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"/>
        
        <Button
            android:id="@+id/Div"
            android:text="/"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Cal"
            android:text="="
            android:textSize="20dp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"/>
    </TableRow>

</TableLayout>